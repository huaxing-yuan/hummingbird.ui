<local:BasicWindow x:Class="Hummingbird.UI.DetachedWindowHost"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" x:ClassModifier="internal"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hummingbird.UI" Initialized="BasicWindow_Initialized" Closing="BasicWindow_Closing"
        mc:Ignorable="d"
        Title="Detached Window Host" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" HorizontalAlignment="Right" x:Name="BorderCommandArea" Margin="10,0"/>
        <Border Grid.Row="1" x:Name="BorderContent" Margin="10" />
        <Border Grid.Row="2" x:Name="BorderStatusBar" />
    </Grid>
</local:BasicWindow>
